.product
  transition margin-bottom 222ms linear

  &__content
    width 250px
    max-width 100%
    margin 0 auto
    height fit-content
    min-height 432px
    // max-height 560px
    position relative
    border 1px solid border-c
    border-radius 5px
    padding-bottom 14px
    transition all 333ms
    background-color #fff
    overflow hidden

  &__list
    margin 0 -10px

  &__link
    display block
    line-height 0

    &--image
      padding 8px

  &__image
    line-height 0
    position relative
    display flex
    aspect-ratio 280/350
    overflow visible
    img
      object-fit contain
      max-height 100%
      max-width 100%
      transition .3s all
  
  &__name
    padding-top 37px

    > a
      display inline-block
      overflow hidden
      height 56px
      font-size 14px
      line-height 18px
      font-weight normal
      color tertiary

  &__price
    margin-bottom 10px

  &__buttons
    height 0
    transition all 222ms linear
    overflow hidden
    text-align center

  &__button
    width 204px
    height 38px
    background-color #2ABC27
    transition all 0.3s
    border-radius 8px
    font-weight 700
    font-size 14px
    line-height 18px
    text-align center
    color #fff
    opacity 0
    visibility hidden

    &:hover
      background-color #47DB43

  @media desktop
    &__name,
    &__price
      padding-inline 16px

    &:hover
      margin-bottom -38px // height of hidden button

      & ^[0]
        &__content
          border-color primary

        &__buttons
          height 38px

        &__button
          opacity 1
          visibility visible

          &:hover
            opacity 0.55

        &__image > img
          transform scale(1.4)

  @media mobile
    &__buttons
      height 38px
      width calc(100% - 20px)
      margin 0 auto
    &__button
      opacity 1
      visibility visible
      width 100%
    &__name,
    &__price
      padding-inline 10px
    &__content 
      width 430px
      height fit-content