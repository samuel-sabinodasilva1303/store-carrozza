.floating-whatsapp
  &__link
    line-height 0
    position fixed
    z-index 5
    left 3%
    bottom 3%
    filter drop-shadow(2px 6px 3px rgba(0, 0, 0, .5))

    > svg
      transform scale3d(.8, .8, 1)
      transition all 333ms

  @media desktop
    &__link
      &:hover
        > svg
          transform scale3d(1, 1, 1)
