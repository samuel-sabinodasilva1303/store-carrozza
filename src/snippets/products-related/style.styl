.products-related
  padding 44px 0
  background #e1e1e1
  padding-top 90px

  &__title
    display flex
    width 898px
    height 77px
    flex-direction column
    justify-content center
    flex-shrink 0
    color #1f1e1e
    text-align center
    font-family Montserrat, sans-serif
    font-size 36px
    font-style normal
    font-weight 600
    line-height normal
    margin 0 auto
    border-radius 37.5px
    border 1px solid #717171
    background #fff

  .product__image
    @media mobile
      justify-content center
  
  .slick-arrow
    @media mobile
      bottom 0
  
  .showcase__list
    min-height 830px
