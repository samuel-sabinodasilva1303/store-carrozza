.minicart
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.4)
  transition 555ms all 333ms

  &[aria-hidden='true']
    opacity 0
    visibility hidden

  &[aria-hidden='false']
    opacity 1
    visibility visible
    z-index 5
    transition-delay 0s

    .minicart__content
      right 0
      transition-delay 333ms

  &__content
    position absolute
    right -400px
    top 0
    width 400px
    box-shadow 0 4px 14px rgba(0, 0, 0, 0.15)
    background #fff
    z-index 5
    transition all 333ms

  &__header
    display flex
    align-items center
    justify-content space-between
    background-color primary
    padding 17px 24px

  &__icon
    display grid
    font-style normal
    place-items center
    width 34px
    height 34px
    position relative

    > svg
      fill #fff

  &__count
    font-size 16px
    font-weight bold
    color #fff
    position absolute
    top -1px
    left 16px

  &__title
    min-width 0
    flex 1
    margin-left 20px
    font-size 16px
    font-weight bold
    color #fff

  &__close
    display inline-block
    transition all 0.3s
    line-height 0
    background rgba(0, 0, 0, 0)

    &--header
      width 40px
      height 40px

    > *
      transition all 0.3s

    > span
      font-weight bold
      font-size 12px
      vertical-align middle
      color gray-c

    > svg
      fill #fff

    &--footer
      > svg
        margin-right 12px
        fill primary

  &__main
    padding-inline 20px

  &__empty
    animation fade 0.5s forwards
    display block
    padding 25px
    text-align center

  &__list
    max-height calc(100vh - 212px)
    overflow auto
    margin-right -10px
    padding-right 10px

  &__item
    display flex
    justify-content space-between
    margin 8px 0
    border 1px solid #f4f7fb
    border-radius 5px
    padding 5px

  &__link
    display flex
    justify-content space-between
    cursor default

  &__frame
    line-height 0
    width 100px
    height 100px
    min-width 0

    > img
      max-width 100px
      max-height 100px
      object-fit contain

  &__info
    cursor pointer
    min-width 0
    flex 1
    margin-inline 16px -10px
    align-self center

    > *
      font-weight 400
      line-height 22px

  &__qty,
  &__price,
  &__name
    display block

  &__qty
    font-size 10px
    line-height 13px
    color #858EA7
    margin-block 6px

  &__name
    font-size 12px
    line-height 15px
    color tertiary
    margin-right -25px
    max-height 45px
    overflow-y auto

    > strong
      font-weight 400

      &:after
        content ': '
        display inline

  &__price
    font-size 14px
    font-weight bold
    color gray-c

  &__remove
    height 45px
    background rgba(0, 0, 0, 0)
    align-self flex-end
    margin-right -8px
    margin-bottom -9px

    > svg
      fill #333
      transition all 0.3s

  &__footer
    padding 20px
    background-color #E9EDF8

  &__advice
    font-size 12px
    line-height 15px
    color tertiary

  &__actions
    margin-top 20px
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap
    gap 8px
  &__cotacao 
    display flex
    border-radius 8px
    background #005A99
    width 188px
    padding 8px 25px
    justify-content center
    align-items center
    gap 10px
    color #FFF
    font-size 11px
    font-style normal
    font-weight 700
    line-height 130% /* 18.2px */
    &:hover 
      color #005A99
      background #e9edf8
      border 1px solid #005A99

  &__finished
    width 142px
    height 34px
    background-color #2ABC27
    border 1px solid #2ABC27
    border-radius 8px
    color #fff
    font-size 14px
    font-weight bold
    transition all 0.3s

  @media desktop
    &__remove
      &:hover
        > svg
          fill tomato

    &__close
      &:hover
        > svg
          fill tomato

        &:hover
          > svg
            fill secondary

          > span
            color secondary

    &__finished
      &:hover
        background #e9edf8
        color #2ABC27

  @media mobile
    &__content
      max-width 100%
      padding 0

    &__close
      &--footer
        padding-block 6px
    &__actions
      width 288px
    &__cotacao
      width 147px
      font-size 10px
      padding 8px 0
    &__finished
      width 130px
      height 31px
      font-size 11px