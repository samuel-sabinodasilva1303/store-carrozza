.customer
  display flex
  align-items center
  position relative
  gap 16px
  height 100%

  &__name
    color #1F1E1E
    font-family 'Public Sans'
    font-size 12px
    line-height 15.6px
    max-width 55px

    >span
      font-weight 700

  > svg
    flex 0 0 auto
    fill #1F1E1E

  &-mobile
    margin-bottom 20px

    &__link
      display block
      line-height 17px
      font-weight 700
      margin-bottom 15px

      &--name
        text-decoration underline

    &__label
      > a
        display inline-block

  &__label
    text-align left

    &,
    &-link
      font-size 12px
      color gray-c
      line-height 15px
      white-space nowrap

    &-link
      text-decoration underline

      &:hover
        color secondary

  &__button
    width 125px
    min-height 32px
    background-color secondary
    border 1px solid secondary
    border-radius 8px
    color #1F1E1E
    font-size 12px
    font-weight bold
    transition all 0.3s ease

    &:hover
      background-color #fff
      color secondary

  &__sep
    margin 13px 0
    position relative

    > span
      font-size 12px
      display inline-block
      padding 0 15px
      background #fff
      position relative
      z-index 1
      color #515970

    &:after
      content ''
      height 1px
      width 100%
      left 0
      top 0
      bottom 0
      margin auto 0
      position absolute
      background #e9edf6

  @media desktop
    &__dropdown
      transition all 0.3s ease
      visibility hidden
      opacity 0
      pointer-events none
      position absolute
      top 100%
      left 50%
      translate -50% 0
      background #fff
      text-align center
      width 204px
      z-index 1
      padding 7px 18px
      box-shadow 0 4px 20px -5px rgba(0, 0, 0, 0.25)
      border-radius 0 0 5px 5px

    &:hover
      & ^[0]__dropdown
        visibility visible
        opacity 1
        pointer-events auto

    &__link
      &:hover
        color #FEB934

      &,
      & + b
        color #1F1E1E
        font-size 12px
        line-height 15px

      &:last-of-type
        display block

      &-dropdown
        margin-top 13px
        font-size 14px
        line-height 18px
        color gray-c
        display flex
        gap 9px
        align-items center
        justify-content flex-start

        > svg
          transition all 333ms
          flex 0 0 auto
          fill primary

        &:hover
          color secondary

          > svg
            fill secondary
