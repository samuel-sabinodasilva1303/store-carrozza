.compare-popup
  z-index 12
  position fixed
  left 0
  width 100%
  transition 333ms all 444ms
  box-shadow rgba(0, 0, 0, 0.1) 0 -10px 20px

  &[aria-hidden=true]
    bottom -50px

  &[aria-hidden=false]
    bottom 0

  &__icon
    width 24px
    height 24px
    display grid
    place-items center
    transition all 333ms

  &__header,
  &__main
    layout 1266px
    position relative

    &:after
      content ''
      display block
      position absolute
      left calc(((100% - 100vw) / 2))
      top 0
      width 100vw
      background-color inherit
      height 100%
      z-index -1

  &__header
    background-color primary
    display flex
    justify-content space-between
    align-items center
    padding-block 9px

  &__action
    display flex
    align-items center
    gap 16px
    cursor pointer

    & ^[0]__icon.rotate
      transform rotate3d(1, 0, 0, 180deg)

  &__label
    font-size 14px
    line-height 18px
    font-weight bold
    color #fff

  &__quant
    display grid
    place-items center
    height 24px
    width 24px
    border-radius 2px
    font-weight bold
    color #fff
    font-size 12px
    background-color secondary

  &__link
    color #fff
    font-size 12px
    line-height 15px
    font-weight bold
    border 1px solid #fff
    border-radius 8px
    display flex
    gap 10px
    align-items center
    padding 5px 8px
    transition all 333ms

    & ^[0]__icon
      width 20px
      height 20px

      > svg
        fill #fff

  &__main
    background-color #3f3f3f
    transition all 333ms

    &[aria-expanded='false']
      height 0

  &__list
    display grid
    padding-block 12px
    gap 12px 100px
    max-height calc(100vh - (100vh - 320px))
    overflow-y auto
    margin-right -10px
    padding-right 10px

  &__item
    display flex
    align-items center
    gap 15px
    position relative

    &:nth-child(even)
      &:before
        content ''
        position absolute
        top 0
        width 1px
        height 62px
        bottom 0
        margin-block auto
        background-color #3f3f3f
        left -50px

  &__info
    display flex
    align-items center
    gap 20px

    > figure
      line-height 0
      flex 0 0 auto

    > p
      font-size 14px
      line-height 18px
      color #fff
      max-width 242px
      max-height 54px
      overflow hidden

  &__remove
    background-color transparent
    display flex
    align-items center
    gap 8px
    font-size 12px
    color #fff
    margin-left auto
    transition all 333ms

    svg
      transition all 333ms
      fill #fff

  @media desktop
    &__list
      grid-template-columns repeat(2, 1fr)

    &__link:hover
      background-color secondary
      border-color secondary

    &__remove:hover
      color #FEB934

      svg
        fill #FEB934

  @media mobile
    &__list
      grid-template-columns repeat(1, 1fr)
