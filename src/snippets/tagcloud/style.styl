.tagcloud
  padding 20px 0

  &__container
    layout maxsize
    display flex
    align-items center
    flex-wrap wrap

  &__title
    flex 100%
    color #000
    margin-bottom 10px
    text-align center

  &__list
    display flex
    justify-content center
    align-items center
    margin 0 auto
    flex-wrap wrap

  &__link
    display inline-block
    padding 3px 7px
    transition all 333ms ease

  @media desktop
    &__item
      &:hover
        a
          filter drop-shadow(0 0 4px rgba(0, 0, 0, .4))
