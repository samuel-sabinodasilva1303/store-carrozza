.banner-home
  max-width 100%
  height 570px
  padding 0 10px

  &__list:not(.slick-initialized)
    & ^[0]
      &__item:not(:first-child)
        display none

  &__link
    display block
    line-height 0

  &__item
    overflow hidden
    > ul 
      layout maxsize
    a 
      display flex
      justify-content center  

  .slick
    &-arrow
      width 30px
      min-width 30px
      height 30px
      background-color rgba(255, 255, 255, 0.5)
      border-radius 50%
      > svg
        width 15px
        height 15px

    &-prev
      display none !important

    &-next
      display none !important

  @media desktop
    &__img
      margin 0 auto
      height  500px
