.suggestion
  position absolute
  top 37px
  left 0
  width 100%
  background #fff
  border 1px solid #ededed
  border-top 0
  border-radius 0 0 10px 10px
  overflow auto
  transition all 0.25s
  padding-bottom 22px
  box-shadow rgba(0, 0, 0, 0.04) 0 3px 5px
  z-index 100

  &:not(:has(> div))
    display none

  &.is-hidden
    opacity 0
    visibility hidden

  &-words
    max-height 75px
    overflow hidden
    background-color #FAFBFD
    padding 24px 22px 14px

    span
      font-size 14px
      line-height 18px
      cursor pointer
      color gray-c

    & ^[0]-title
      display none

  &-products
    max-height 40vh
    overflow-y auto
    min-width 0
    position relative
    padding-inline 14px
    display flex
    align-items center
    gap 16px
    flex-wrap wrap

    > strong
      background #fff
      position sticky
      top 0
      left 0
      line-height 22px
      flex 100%
      display block
      padding-block 16px
      margin-bottom -16px

    @media mobile
      justify-content center


  &-title
    font-size 18px
    line-height 23px
    font-weight bold
    color gray-c
    display block
    margin-bottom 8px

  &-product
    border 1px solid border-c
    border-radius 5px
    padding 5px
    flex 1 auto
    max-width 281px

    > a
      display flex
      align-items center
      color tertiary
      font-size 12px
      line-height 15px
    
    &:hover
      border: 1px solid #F2F2F2;

  &-img
    width 100px
    height 100px

    img
      max-width 100px
      max-height 100px
      margin 0 auto

  &-desc
    margin-left 10px

