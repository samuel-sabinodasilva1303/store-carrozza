.input-range
  width 100%
  height 45px
  display flex
  align-items center
  position relative

  &:before
    content ''
    height 2px
    border-radius 5px
    width 100%
    background border-2
    position absolute
    z-index 0
    pointer-events none

  &__track
    display block
    position absolute
    height 2px
    width 100%
    left 0
    width 'calc((%s * 1%) - (%s/100)*(%s))' % (max max tmb) // width calc(61% - (61/100)*(25px) )
    background #2B6FF1
    left 'calc((%s * 1% ) + ((%s/2) - (%s/100)*(%s) ))' % (min tmb min tmb) // left calc(26% + (25px/2 (26/100)*(25px)))
    margin auto
    top 0
    bottom 0
    z-index 1
    pointer-events none

  &__input
    appearance none
    width 100%
    height 2px
    background-color transparent
    pointer-events none
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto

    // Slider Track - Safari, Chrome, Opera, Edge, Chromium
    &::-webkit-slider-runnable-track
      height 2px
      background-color border-2
      border-radius 5px

    // Slider Thumb
    &::-webkit-slider-thumb
      -webkit-appearance none
      appearance none
      background-color #2B6FF1
      height 14px
      width tmb // Defina a larguna no snippet
      border-radius 7px
      cursor pointer
      margin-top -6px
      pointer-events auto
      position relative
      z-index 2

    // Slider Track - Firefox
    &::-moz-range-track
      height 2px
      width 100%
      background-color transparent // defina a cor para o firefox no :before

    // Slider Thumb - Firefox
    &::-moz-range-thumb
      border none
      height 14px
      width tmb // Defina a larguna no snippet
      pointer-events auto
      border-radius 7px
      background-color #2B6FF1
      cursor pointer
      position relative
      z-index 2