.banner
  &--extra4
    margin-bottom 10px

  &__figure
    img
      margin 0 auto 
      width 120px
      &:hover
        transform scale(1.07)
        opacity 0.5

  &--title
    padding-block 12px 8px

  @media mobile
   &__figure
      img
        margin 20px 0 0 60px
        width 160px
    &--title
      .banner
        &__figure
          overflow hidden

          img
            position relative
            left 50%
            transform translateX(-50%)
            max-width 200%

