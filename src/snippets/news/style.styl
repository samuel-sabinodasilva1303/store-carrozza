.news
  background #fbfbfb
  padding 37px 0

  &__container
    layout maxsize

  &__title
    font-weight 700
    font-size 32px
    line-height 48px
    margin-bottom 35px
    text-align center
    color #000

  &__content
    .noticias
      #noticia_imagem, #noticia_dados
        width 355px
        max-width 100%
        margin 0 auto

    #noticia_dados
      padding 24px 19px
      background #fff

      p
        font-weight 400
        font-size 14px
        line-height 21px
        color secondary

      h3
        margin-bottom 15px
        font-size 14px
        font-weight 400
        line-height 21px
        color secondary

        > a
          margin-top 10px
          display block
          font-wight 700
          font-size 22px
          line-height 26px
          color #525252
