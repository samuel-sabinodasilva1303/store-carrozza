.filter
  // &._lazy
  // visibility hidden
  // opacity 0
  &__fake-select
    display inline-flex
    align-items center
    justify-content space-between
    flex-wrap wrap
    width 100%

    > svg
      fill #3f3f3f
      transition all 333ms
      margin-right 16px
      transform rotate3d(1, 0, 0, 180deg)
      pointer-events none

    &.open
      > svg
        transform rotate3d(1, 0, 0, 0)

  &__title
    color gray-c
    font-weight bold
    font-size 14px
    line-height 18px
    padding-block 12px
    flex 1
    cursor pointer
    padding-left 16px
    margin-right -20px

  &__name
    color #515970
    font-size 12px
    line-height 130%

  &__count
    color #A6B2D1
    font-size 12px
    font-style normal
    font-weight 500
    line-height 130%
    &--count
      font-size 12px
      line-height 15px
      color #858EA7

  &__price
    width 100%
    margin-bottom 10.5px
    padding-inline 16px
    border-top 1px solid border-2

    &-content
      margin-top 16px

    &-block
      margin-bottom 8px

    &-label
      color #858EA7
      font-size 10px
      line-height 13px
      display inline-block
      margin-bottom 5px

    &-input
      border 1px solid #f2f2f2
      border-radius 5px
      background-color #fff
      padding-inline 10px
      font-size 14px !important
      color gray-c
      max-width 100%
      min-height 35px !important

  &__list
    flex 100%
    display flex
    flex-direction column
    border-top 1px solid border-2
    padding 8px 0 0 16px

  &__item
    padding-block 6px

    &:last-of-type
      margin-bottom 28px

    &--btn
      display flex
      align-items center
      gap 0 15px
      font-weight 600
      line-height 20px
      font-size 14px
      color #939998
      padding-inline 8px
      cursor pointer

      &:not(:last-of-type)
        margin-bottom 25px

      > svg
        transform rotate3d(1, 0, 0, 180deg)

      &:last-of-type
        display none

        > svg
          transform rotate3d(0, 0, 0, 0)

  &__label
    gap 4px
    display flex
    cursor pointer

  &__input
    appearance none
    height 15px
    width 15px
    border-radius 2px
    background #fff
    vertical-align middle
    margin 0 4px 0 0
    border 1px solid border-2
    transition all 333ms linear
    cursor pointer

    &--propertie
      &:checked
          background #2ABC27
          position relative
          border-color #2ABC27

        &:after
            content '\2714'
            transition all 333ms linear
            font-size 12px
            color #fff
            position absolute
            top 1px
            left 2px

  &__actions
    margin-top 1em
    > a
      color #515970
      padding 0 15px
      border 1px solid #515970
      &:hover
        color #3f3f3f
        border 1px solid #3f3f3f

  &__applied
    margin-top 1em
    &--title
      margin-bottom 4px
      color #515970
      font-size 12px
      line-height 15px
    &--list
    &--item
    &--link
      line-height 160%
    &--label
      color #515970
      font-size 12px
      line-height 15px

  @media desktop
    width 216px
    max-width 100%
    padding-right 20px

    &__block
      &:first-of-type
        border-top 1px solid border-2

      &:not(:last-of-type)
        border-bottom 1px solid border-2

      &:last-of-type
        transition 333ms border 222ms linear

        & ^[0]__fake-select:not(.open)
          border-bottom 1px solid border-2

  @media mobile
    &__content
      background #fff
      border-radius 5px
      overflow hidden
      padding 10px 15px

    &__block
      &:not(:first-of-type)
        & ^[0]__fake-select
          border-top 1px solid border-2

    &__fake-select
      > svg
        pointer-events none

    &__title
      margin-right -23px

    &__actions
      margin-top 50px

    &__price-input
      width 100%

    &__btn
      font-weight bold
      line-height 20px
      font-size 16px
      text-transform uppercase

      &--submit
        background-color primary
        width 100%
        height 48px
        border-radius 8px
        margin-bottom 10px
        color #fff

      &--clean
        color tomato
        min-height 48px
        width fit-content
        margin-inline auto
        display block
        background rgba(0, 0, 0, 0)
     &__actions
        text-align center
        padding-block 30px