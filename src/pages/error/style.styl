.page-error
  body
    display flex
    align-items center
    justify-content center
    padding 0
    min-height 100vh

  &__text
    text-align center
    border none

    strong
      font-weight bold
      font-size 25pxs
      display block
      margin-bottom 15px

    a
      text-decoration underline

  @media desktop
    &__text a
      transition all .3s

      &:hover
        color #525252
