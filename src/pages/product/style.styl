      align-items center
      padding 24px 8% 50px
      width 100%
      min-height 170px

      > .item
        display none

      > p
        flex 100%
        color tertiary
        font-size 14px
        line-height 18px

    .reviewer
      color gray-c
      font-size 18px
      line-height 23px
