        display flex
        align-items center
        justify-content center

        > svg
          fill #525252

  &__ref
    font-size 12px
    line-height 15px
    color #858EA7

  &__ranking
    display flex
    align-items center
    justify-content space-between

  &__brand
    font-size 12px
    line-height 15px
    color tertiary
    margin-top 5px

  &__name
    font-size 40px
    font-weight 600
    line-height 52px
    color gray-c
    margin-top 9px

  &__labels
    margin-top 16px
    display flex
    align-items center
    gap 4px

  &__shippingFree
    display flex
    width 516px
    padding 10px 40px 11px 13px
    align-items flex-start
    border 1px solid #005A99
    background #E9EDF8
    gap 16px
    &:hover 
      cursor pointer
      background #fff
      transition all 1s
    &--main 
      padding-block 10px


      .efpopuptext
        width 516px
        background-color #0199ff
        color #fff
        flex-wrap wrap
        position absolute
        z-index 1
        text-align left
        float left
        margin 0
        padding 19px 15px
        list-style none
        gap 3px
        
