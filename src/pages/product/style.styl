.page-product
  .parc__container, .boleto__container
    border 1px solid #E9EDF8
    border-radius 8px
    margin 10px 0
    > li 
      display block !important
      > a
        display none
      > table 
        > tbody
          > tr
            > td
              color #A6B2D1
              font-size 14px
              font-style normal
              font-weight 500
              line-height 130% /* 18.2px */

              &:first-of-type
                width 50px !important

  .pgto__topbar
    background #E9EDF8
    width 100%
    height 41px
    border-radius 8px
    margin-bottom 30px
    font-size 16px
    font-weight 700
    line-height 20.8px
    color #292F3E
    padding 10px

  #formasPagto
    li
      list-style none
      margin 0 40px
  header
    box-shadow 0 4px 14px rgba(0, 0, 0, 0.1)

  .produto-imagem-grande.produto-video > .bloco
    display contents

    img
      max-width 100%
      max-height 100%

  #imgView
    width 100%
    max-width 457px
    max-height 632px

  .produto-imagem.zoom-off
    // pointer-events none
    margin 0 auto
    position relative

    .produto-imagem-grande
      > a
        cursor default
        display block

      &.produto-video
        cursor pointer
        display flex
        align-items center
        justify-content center
        height 100%

  .produto-imagem.zoom-on
    .produto-imagem-grande.produto-video
      margin 0 auto
      display flex
      align-items center
      justify-content center
      z-index 4
      cursor pointer

  .produto-zoom-detalhe,
  #economize,
  #info,
  #visualAbas,
  #form_comprar br,
  #add,
  div[style*='clear:both']
    display none

  #produto_nao_disp
    #nao_disp
      display flex
      margin-bottom 10px
      position relative
      margin-top 38px
      
      .blocoSucesso
        font-size 14px
        line-height 16px

        > br
          display block

      label
        font-size 0

      #letMeKnow
        display flex
        align-items center
        justify-content center
        height 45px
        width 100%
        font-weight 700
        font-size 14px
        color #fff
        background #005A99
        border-radius 0px 8px 8px 0px

        > img
          display none

        &:before
          content 'avise-me'
          display inline

      .color
        display none

      #email_avise
        width 268px
        color secondary
        padding 0 15px
        border-radius 8px 0 0 8px

        &:invalid,
        &:-moz-ui-invalid
          outline none
          box-shadow none

      #div_erro
        font-size 13px
        font-weight 400
        color #f0506e
        display inline-block
        margin-top 10px
      
      &:before
        content "Deixe seu e-mail para ser avisado quando o produto estiver disponível :)"
        position absolute
        top -44px
        color: #515970;
        font-size: 14px;
        font-weight: 500;
        line-height: 130%; 
        width 100%


    .botao-nao_indisponivel
      margin-bottom 15px
      display inline-block
      background #E9EDF8
      font-size 0
      width 383px
      height 42px
      line-height 39px
      border 0
      text-align center
      margin-top 24px

      &:before
        content 'Produto indisponível'
        color #292F3E
        display inline-block
        font-size 14px
        font-weight 700
        text-transform initial
  &__adrres
    width 430px
    padding 18px 40px
    height auto
    margin-bottom 3em
    border 1px solid #3f3f3f
    background #E9EDF8
    > ul
      display flex
      align-items center
      flex-wrap wrap
      width 100%
      justify-content space-between
      gap 30px
      > li 
       > h3, span
        display none
      .title
        color #3f3f3f
        font-size 14px
        font-style normal
        font-weight 700
        line-height 150%
      .number
        color #292F3E
        font-size 14px
        font-style normal
        font-weight 500
        line-height 150%
        margin-top 6px

  
  &__content
    position relative
    background #E1E1E1
    padding-top 90px

    &.bottom
      padding-top 50px

    &:before
      content ''
      display block
      position absolute
      width 100vw
      height 100%
      top 0
      left calc(((100% - 100vw) / 2))

      ^[-1].top:before
        background-color #fff
        box-shadow 0 4px 20px -10px rgba(0, 0, 0, 0.25)
        z-index -1

      ^[-1].bottom:before
        background-color #fafbfd
        z-index -2

  &__thumbs
    img
      max-height 120px
      margin auto

    &--video
      height 120px
      display flex
      align-items center
      justify-content center

      > svg
        fill #525252

  .produto-imagem-miniatura,
  &__thumbs--link:not(&__thumbs--video)
    display block
    width 115px
    margin 0 auto
    height 120px

  #product-priceBox
    > .produto-preco
      padding-bottom 13px

  #produto_preco
    display flex
    flex-wrap wrap
    align-items center
    width 100%

    .txt-por,
    a.botao_tire_duvidas
      display none !important

    .color:has(.botao-sob-consulta)
      width 100%
      margin 24px 0

    span.botao-sob-consulta
      display flex
      align-items center
      justify-content center
      height 42px
      font-size 16px
      width 100%
      font-size 0
      text-align center
      line-height 39px
      background #E9EDF8

      &:before
        content 'Sob consulta'
        display inline
        color: #292F3E
        font-size: 14px
        font-weight: 700
        line-height: 130%

    #precoDe
      flex 100%
      font-size 14px
      line-height 24px
      font-weight 500
      color #A6B2D1
      text-decoration line-through

    .color-tone-2:not(.PrecoPrincipal)
      display block
      flex 100%
      margin-bottom 5px
      display none

    .PrecoPrincipal
      flex 100%
      font-size 24px
      font-weight 700
      line-height 31px
      color primary
      position relative
      display flex
      gap 8px
      flex-wrap wrap
      &:after 
        content "à vista"
        display block
        font-size 20px

    #info_preco
      order 3
      flex 100%
      font-size 14px
      line-height 18px
      color gray-c

      // .preco-avista.precoAvista,
      // .txt-avista,
      // .txt-com-desconto
      //   display none

      .txt-forma-pagamento
        display none

      .txt-corparcelas.txt-corparcelas .preco-parc2 .color:before
        content 'em até'
        font-weight normal
        display inline-block

  #cepbox
    font-size 0
    display flex
    align-items center
    flex-wrap wrap

    label
      display none

  &__image,
  &__info
    min-width 0

  &__gallery
    position relative

  &__image
    #cloud-zoom-big,
    #wrap
      z-index 4 !important

    #cloud-zoom-big
      left 0 !important
      top 0 !important
      width 100% !important
      height 100% !important
      margin auto !important

    #container_thumb
      cursor move !important

    #foto_p
