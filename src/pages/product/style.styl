    place-items center

    > br,
    > h2.color
      display none

    &--title
      margin-block 30px
      font-size 18px
      font-weight bold
      line-height 23px
      color gray-c
      order -2

    &--btn
      font-size 16px

    &--btn,
    a[data-logged-user='false']
      background-color primary
      border-radius 8px
      border 1px solid primary
      color #fff
      font-weight bold
