        color #005A99
        font-size 18.112px
        font-style normal
        font-weight 700
        line-height 130%
        text-transform uppercase

      > p
        color #595867
        font-size 14px
        font-style normal
        font-weight 400
        line-height 130%

  &__pricing
    transition all 333ms ease
    
    .price-product-content 
      display flex
      flex-direction column 
      gap 5px
      margin-bottom 20px

    .price-product 
      display flex
      gap 5px
      align-items baseline
      
      > h1
       color #005a99

      > strong
        display flex
        gap 5px
        align-items baseline
        
      > span
        color #515970
        font-size 14px
        font-family "Public Sans"
        


    &._lazy
      opacity 0
      visibility hidden

  &__buttons
    width fit-content 

  &__fav
    padding 0 0 27px 10px
    margin-bottom 20px
    border-bottom 1px solid #ededed

    > svg
      vertical-align middle
      fill primary

    #container-add-lista
      display inline-block

      .color
        display inline-block
        line-height 18px
        font-weight 400
        position relative
        padding-left 26px
        left -18px
        color secondary
        font-size 0

        &:after
          content 'Adicionar aos favoritos'
          font-size 12px
          display inline
          text-decoration underline

  &__variations
    padding-block 10px

    .varCont > .lista_radios > li
      margin-bottom 10px

      > span
        display inline-block
        margin-bottom 4px

      > ul label
        cursor pointer

    .passo1:not(.show_size_and_color_type)
      display inline-block
      margin-bottom 15px

      .varTit
        margin-bottom 10px

    #variation_second_select > select,
    select#second_dropdown,
    select#variation_first_select
      appearance none
      background-image arrow-down
      background-size auto
      background-position calc(100% - 14px) center
      background-repeat no-repeat
      font-size 13px
      border-radius 8px
      color tertiary
      border 1px solid border-2
      width auto
      min-width 156px
      min-height 38px
      background-color #fff
      padding-inline 16px

    #cor_nome
      display none

    .varTit,
    .texto_variacao h2
      font-size 12px
      line-height 18px
      font-weight 400
      margin-bottom 10px

    .varTit:has(+ div:empty)
      display none

    .show_size_and_color_type
      .lista_cor_variacao
        display flex
        align-items center
        gap 11px
        flex-wrap wrap
        margin-bottom 20px

        > li img
          padding 1px
          border-radius 3px
          border 2px solid #e0e0e0
          transition all 0.3s
          width 35px
          height 35px

          &.cor_selecionada
            border-color primary
            padding 1px

        > li > div
          height 35px
          min-width 35px
          text-align center
          background #fff
          border 2px solid #e0e0e0
          border-radius 3px
          font-size 14px
          line-height 34px
          transition all 0.3s
          color tertiary
          padding-inline 6px

          &.cor_selecionada
            border-color primary
            color primary

  &__shipping
    margin-top 30px
    transition all 333ms

    &._lazy
      opacity 0
      visibility hidden

    .blocoAlerta
      font-size 12px
      line-height 18px
      color #F0506E
      display inline-block
      margin-top 10px

    &--link
      color #2B6FF1
      font-size 13px
      font-weight 400
      display inline-block
      margin 13px 0
      text-decoration underline

    #cep1,
    #cep2
      height 42px
      min-height 42px
      border 1px solid #c5c5c5
      font-size 17px
      color secondary
      letter-spacing 1px
      display none

    #fullcep
      min-height 38px
      border 1px solid border-2
      color #858EA7
      font-size 12px !important
      letter-spacing 0px
      border-radius 8px
      border-top-right-radius unset
      border-bottom-right-radius unset
      width 160px
      padding-inline 12px
      text-align start

    #cep1
      border-right none
      border-radius 0 0 0 0
      width 90px
      text-align right

    #cep2
      border-left none
      border-radius 0 0 0 0
      width 68px

    .cepbox-text
      flex 100%
      margin-bottom 15px

      &:before
        content 'Consulte prazo e valor do frete'
        font-size 14px
        line-height 18px
        color gray-c
        font-weight bold
        display inline-block

    #shippingSimulatorButton
      display inline-block
      width 119px
      height 38px
      color #fff
      background-color primary
      border 1px solid primary
      border-top-right-radius 8px
      border-bottom-right-radius 8px
      font-weight bold
      display inline-flex
      align-items center
      justify-content center
      font-size 0
      margin-left -1px

      &:before
        content 'Calcular'
        display inline-block
        font-size 14px

  &__links
    display flex
    padding-block 21px
    gap 1em
    > span
      font-size 12px
      font-style normal
      font-weight 500
      line-height 130%
      &:hover
        text-decoration underline
      > a
        color #515970
        &:hover
          color #2b6ff1

  &__additional-info
    .varCont
      margin-bottom 20px

      &:last-of-type
        margin-bottom 35px

    .varTit strong
      font-size 12px
      line-height 18px
      font-weight 400
      margin-bottom 10px

    select,
    input,
    textarea
      font-size 13px
      color secondary
      border 1px solid #ededed
      width 172px
      max-width 100%
      background #fff

    select,
    input
      height 42px
      border-radius 21px
      padding 0 8px

    textarea
      border-radius 5px
      resize none
      padding 8px

    select
      appearance none
      background-image arrow-down
      background-size 13px 17px
      background-position calc(100% - 14px) center
      background-repeat no-repeat

  &__gift
    margin-bottom 25px
    padding-bottom 10px
    border-bottom 1px solid #ededed

    .brinde_produto
      position relative

      #brindes
        width auto !important

      #btmais,
      #btmenos
        display none !important
        position absolute
        width 20px
        height 100%
        z-index 1
        display flex
        align-items center
        justify-content center
        transition all 0.3s

        > strong
          display none

      #btmais
        right -20px

      #btmenos
        left -20px

    #nomeBrinde
      font-size 16px
      color #000
      font-weight 700

    .brinde_produto_lista
      // overflow hidden
      margin-top 10px

    .brinde_lista
      // display flex
      align-items center

      > li
        padding 5px

        img
          border-color #525252 !important

  &__summary
    &--text
      font-size 14px
      line-height 21px
      font-weight 400

    &--fadeout
      height 30px
      position relative
      bottom 32px
      background-image linear-gradient(rgba(255, 255, 255, 0) 0, rgba(255, 255, 255, 1) 100%)

    &--anchor
      display block
      text-align center
      color #525252
      font-size 16px
      line-height 24px
      font-weight 700
      text-decoration underline

  &__kits
    padding-bottom 20px
    margin-bottom 35px
    border-bottom 1px solid #e0e0e0

    .tray-kit
      &-title
        margin-bottom 25px
      &-list 
        height 420px
        overflow auto

        h3
          font-size 24px
          font-weight 700
          line-height 36px
          color primary
          margin-bottom 10px

        &:after
          content ''
          height 2px
          width 43px
          display block
          background primary
          margin-top 5px

      &-item
        padding 8px
        border-radius 3px
        border: 1px solid #F4F7FB

        &:not(:first-of-type)
          margin-top 15px

        > div
          display flex
          flex-wrap wrap
          gap 15px

      &-unity
        flex 100%
        order -1
        margin-bottom 5px

      &-info,
      &-image
        flex 0 1 47%
        min-width 0

      &-name > a 
        color #515970
        font-size 14px
        font-style normal
        font-weight 500
        line-height 130% /* 18.2px */

      &-variation
        .varTit
          font-size 12px
          line-height 18px
          font-weight 400
          margin-bottom 10px

        select
          appearance none
          background-image arrow-down
          background-size 13px 17px
          background-position calc(100% - 14px) center
          background-repeat no-repeat
          font-size 13px
          border-radius 21px
          color secondary
          border 1px solid #c5c5c5
          width auto
          min-width 156px
          min-height 42px
          background-color #fff
          text-indent 16px

