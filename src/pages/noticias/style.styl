/* Noticia aberta */
.page-noticia
  .main__container
    >.container3
      margin 50px 0

      > .container2 > .board
        margin-bottom 25px

      p
        line-height 22px
        text-align justify

  img.imagemNoticia
    float left
    padding 0 15px 15px 0

    @media (max-width 768px)
      padding 0
      float none
      margin 0 auto

  .dataNoticia
    display inline-block
    color #333

    & + h2
      display inline-block
      color #525252

  .dataNoticia:after
    content '-'
    display inline-block
    margin 0 10px

  #ProdBlock
    margin-top 25px

    > #ProdAbas
      text-align center

      a
        font-size 25px
        color primary
        font-weight bold

    > #noticiaProdutos
      margin-top 20px

      #listaNoticiaProdutos
        display flex
        justify-content space-between

        &.slick-initialized
          li
            width auto

        .slick-track
          display flex
          justify-content space-between

        li
          max-width 248px
          text-align center
          flex 1

        #produto_imagem
          height 180px
          width 180px
          max-width 100%
          max-height 100%
          display flex
          align-items center
          justify-content center
          margin 0 auto

        #produto_dados h3 > a
          font-size 16px
          font-weight normal
          height 34px
          overflow hidden
          color primary
          display block

        #produto_comprar
          font-size 14px
          color tertiary


          > a
            margin 6px auto
            display block
            width 172px
            height 42px
            background secondary
            border 1px solid rgba(0, 0, 0, 0)
            transition all .3s
            border-radius 21px
            font-weight 700
            font-size 16px
            text-align center
            opacity 0
            visibility hidden
            color tertiary

            &:after
              content 'Detalhes'
              line-height 40px
              font-weight bold

            img
              display none

  @media desktop
    #ProdBlock>#noticiaProdutos #listaNoticiaProdutos  li:hover #produto_comprar
      > a
        visibility visible
        opacity 1

        &:hover
          border-color secondary
          color secondary
          background tertiary

  @media mobile
    #ProdBlock>#noticiaProdutos #listaNoticiaProdutos.slick-initialized li
      padding 5px
      margin 5px

/* Lista de noticias */
.page-busca_noticias
  h1.color
    color primary
    font-size 32px
    text-align center

  .main__container
    #listaCategoriasNoticias
      li > a
        font-size 25px
        color #525252

    #noticia_imagem
      width fit-content
      margin 0 auto

    #noticia_dados
      h3
        font-size 10px
        font-weight 400
        line-height 20px
        margin-bottom 15px

        > a
          font-size 16px
          color #525252
          vertical-align middle

      > a
        display block
        line-height 0

    > .container3
      margin 40px 0

      > .container2
        .board
          > .left
            font-size 12px

    .board
      ul.noticias
        display grid
        grid-template-columns repeat(auto-fill, minmax(290px, auto))
        grid-gap 25px

  @media desktop
    .main__container #listaCategoriasNoticias li > a:hover, .main__container #noticia_dados > h3 a:hover
      opacity .6
      text-decoration underline
